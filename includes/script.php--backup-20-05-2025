<script>
    var swiper = new Swiper(".heroslide", {
      centeredSlides: true,
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      loop : true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-item-custom');
        const dots = document.querySelectorAll('.dot-custom');
        const carousel = document.querySelector('.carousel-custom'); // Ensure carousel is correctly selected

        if (slides.length > 0 && dots.length > 0 && carousel) { // Check if elements exist

            function updateSlides() {
                slides.forEach((slide, index) => {
                    slide.classList.remove('carousel-item-active', 'carousel-item-left', 'carousel-item-right');
                    dots.forEach(dot => dot.classList.remove('active'));

                    // Set the active class for the current slide
                    if (index === currentSlide) {
                        slide.classList.add('carousel-item-active'); // Active slide
                        dots[currentSlide].classList.add('active'); // Active dot
                    } else if (index === (currentSlide - 1 + slides.length) % slides.length) {
                        slide.classList.add('carousel-item-left'); // Previous slide
                    } else if (index === (currentSlide + 1) % slides.length) {
                        slide.classList.add('carousel-item-right'); // Next slide
                    }
                });
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length; // Loop to the first slide
                updateSlides();
            }

            function prevSlide() {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length; // Loop to the last slide
                updateSlides();
            }

            function goToSlide(index) {
                currentSlide = index; // Set current slide to the index
                updateSlides();
            }

            /* Autoplay feature */
            let autoplayInterval;

            function startAutoplay() {
                autoplayInterval = setInterval(nextSlide, 3000); // Change slides every 3 seconds
            }

            function stopAutoplay() {
                clearInterval(autoplayInterval);
            }

            /* Swipe functionality for touch devices */
            let startX;

            carousel.addEventListener('touchstart', (e) => {
                startX = e.touches[0].clientX;
            });

            carousel.addEventListener('touchend', (e) => {
                let endX = e.changedTouches[0].clientX;
                if (startX > endX + 50) {
                    nextSlide(); // Swipe left
                } else if (startX < endX - 50) {
                    prevSlide(); // Swipe right
                }
            });

            // Attach button click events
            const nextButton = document.querySelector('.arrow-next');
            const prevButton = document.querySelector('.arrow-prev');

            if (nextButton) {
                nextButton.addEventListener('click', nextSlide); // Next slide on button click
            }

            if (prevButton) {
                prevButton.addEventListener('click', prevSlide); // Previous slide on button click
            }

            // Initialize carousel
            updateSlides();
            startAutoplay(); // Start autoplay when the carousel is initialized
        } else {
            console.error("Carousel elements are not found.");
        }
    });
</script>
